{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["build:types", "build:packages"],
      "outputs": [
        "dist/**/*",
        "*.tsbuildinfo",
        ".wrangler/**/*"
      ],
      "inputs": ["src/**/*", "tsconfig.json", "package.json"]
    },
    "lint": {
      "dependsOn": ["^lint", "build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test", "build"],
      "outputs": ["coverage/**/*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "cache": false,
      "outputs": ["dist/**/*", "*.tsbuildinfo"]
    },
    "build:packages": {
      "dependsOn": ["build:types"],
      "cache": false,
      "outputs": ["dist/**/*", "*.tsbuildinfo"]
    }
  }
}
