{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "types": ["@cloudflare/workers-types", "vitest/globals", "node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@mdxdb/clickhouse": ["../clickhouse/src"],
      "@mdxdb/types": ["../types/src"]
    }
  },
  "references": [
    { "path": "../types" },
    { "path": "../clickhouse" }
  ],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
