{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "Bundler",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@mdxdb/types": ["../types/dist"],
      "@mdxdb/types/*": ["../types/dist/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.ts", "src/document.ts", "src/collection.ts"],
  "exclude": ["node_modules", "dist", "test"],
  "references": [
    { "path": "../types" }
  ]
}
