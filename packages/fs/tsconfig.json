{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "Node",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "paths": {
      "@mdxdb/types": ["../types/src"],
      "@mdxdb/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"],
  "references": [
    { "path": "../types" }
  ]
}
